{erl_opts, [debug_info]}.

{xref_checks, [ undefined_function_calls
              , locals_not_used
              , deprecated_function_calls
              , deprecated_functions
              ]}.

{ct_opts, [{verbose}]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.


{deps, [ {gproc, "0.8.0"}
       , {hut, "v1.3.0"} %% Logging
       ]}.

{escript_incl_apps,
 [fakeredis_cluster]}.
{escript_main_app, fakeredis_cluster}.
{escript_name, fakeredis_cluster}.
{escript_emu_args, "%%! +sbtu +A1\n"}.
